datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id   String @id @default(cuid())
    Post Post[]
}

model Post {
    id       String @id @default(cuid())
    title    String
    content  String
    author   User   @relation(fields: [authorId], references: [id])
    authorId String
}
